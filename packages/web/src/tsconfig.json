{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "isolatedModules": true,
    "declaration": false,
    "composite": false,
    "declarationMap": false
  },
  "exclude": ["node_modules", ".next"],
  "include": [
    "next-env.d.ts",
    "client-types.tsx",
    "**/*.ts",
    "**/*.tsx",
    "server.js"
  ]
}
