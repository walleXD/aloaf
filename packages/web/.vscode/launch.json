{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Next.js",
      "processId": "${command:PickProcess}",
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Next: Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "runtimeExecutable": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
      "runtimeArgs": ["--remote-debugging-port=9222"],
      "smartStep": true,
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Next: Node",
      "program": "${workspaceFolder}/devServer.js",
      "env": {
        "NODE_OPTIONS": "--inspect-brk=9249"
      },
      "port": 9249,
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Next: Full",
      "configurations": ["Next: Node", "Next: Chrome"]
    }
  ]
}
